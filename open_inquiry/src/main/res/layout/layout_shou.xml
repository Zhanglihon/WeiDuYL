<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:src="@mipmap/historical_inquiry"
            android:id="@+id/image_haid"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <ImageView
            android:src="@mipmap/common_nav_message_black_n"
            android:id="@+id/image_ling"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/text_k"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_below="@id/image_haid"
            android:layout_marginTop="20dp"
            android:background="#F2F2F2" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyc_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/image_haid"
        android:background="#F2F2F2" />


  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <RadioGroup
          android:gravity="center"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:id="@+id/rg_title"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="34dp"
          android:orientation="horizontal">
          <RadioButton
              android:checked="true"
              android:id="@+id/rb_title_select"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:button="@null"
              android:gravity="center"
              android:textColor="@drawable/btn_title_text_selector"
              android:text="综合"
              android:textSize="14sp"
              android:background="@drawable/btn_title_bg_selector" />
          <RadioButton
              android:layout_weight="1"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:button="@null"
              android:gravity="center"
              android:textSize="14sp"
              android:textColor="@drawable/btn_title_text_selector"
              android:text="好评"
              android:background="@drawable/btn_title_bg_selector"/>
          <RadioButton
              android:layout_weight="1"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:button="@null"
              android:gravity="center"
              android:textColor="@drawable/btn_title_text_selector"
              android:text="咨询数"
              android:background="@drawable/btn_title_bg_selector"/>

          <RadioButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@drawable/btn_title_bg_selector"
              android:button="@null"
              android:gravity="center"
              android:text="价格"
              android:textColor="@drawable/btn_title_text_selector"
              android:textSize="14sp" />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@mipmap/common_button_sequence_n" />
      </RadioGroup>

  </LinearLayout>
    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/yuanjiao_huiser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/jj"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_ren"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/rr"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

        <TextView
            android:textColor="#000"
            android:text="曾小贤"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="9dp"
            android:textSize="14sp"
            android:layout_below="@id/jj"
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/text_name"
            android:text="主任医师"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:textSize="10sp"
            android:layout_below="@id/jj"
            android:id="@+id/text_zhiwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="主任医师"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_below="@id/text_name"
            android:id="@+id/text_adrss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="好评率   98%"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_below="@id/text_adrss"
            android:id="@+id/text_haopin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/text_haopin"
            android:text="服务患者数    356"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_below="@id/text_adrss"
            android:id="@+id/text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:id="@+id/xiaoxi"
            android:background="@mipmap/common_icon_more_n"
            android:layout_below="@id/jj"
            android:layout_marginTop="26dp"
            android:layout_marginRight="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"/>
       
        <LinearLayout
            android:layout_below="@id/text_num"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/text_cishu"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="500H币/次"
                android:layout_height="match_parent" />
            
            <Button
                android:textColor="#fff"
                android:background="@drawable/meijiao"
                android:text="立即咨询"
                android:id="@+id/but_zixun"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            
        </LinearLayout>
       

    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="13dp"
            android:src="@mipmap/common_information_next_n"
            android:layout_height="12dp"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/image_left"
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:src="@mipmap/common_list_previous_n"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="18dp"
            android:id="@+id/recyc_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>

</LinearLayout>
