<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/my_icon_set_n"
            android:id="@+id/image_haid"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="12dp"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <ImageView
            android:src="@mipmap/my_icon_set_n"
            android:id="@+id/image_ling"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginRight="12dp"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/text_k"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_below="@id/image_haid"
            android:layout_marginTop="20dp"
            android:background="#F2F2F2" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/recyc_view"></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/image_haid"
        android:background="#F2F2F2" />


    <RadioGroup
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/rg_title"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">
        <RadioButton
            android:checked="true"
            android:id="@+id/rb_title_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/btn_title_text_selector"
            android:text="综合"
            android:background="@drawable/btn_title_bg_selector" />
        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/btn_title_text_selector"
            android:text="好评"
            android:background="@drawable/btn_title_bg_selector"/>
        <RadioButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/btn_title_text_selector"
            android:text="咨询数"
            android:background="@drawable/btn_title_bg_selector"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/btn_title_text_selector"
            android:text="价格"
            android:background="@drawable/btn_title_bg_selector"/>
    </RadioGroup>
    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/yuanjiao_huiser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_ren"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="曾小贤"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="9dp"
            android:textSize="14sp"
            android:layout_below="@id/image_ren"
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/text_name"
            android:text="主任医师"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:textSize="10sp"
            android:layout_below="@id/image_ren"
            android:id="@+id/text_zhiwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="主任医师"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_below="@id/text_name"
            android:id="@+id/text_adrss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="好评率   98%"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_below="@id/text_adrss"
            android:id="@+id/text_haopin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/text_haopin"
            android:text="服务患者数    356"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_below="@id/text_adrss"
            android:id="@+id/text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:layout_below="@id/image_ren"
            android:layout_marginTop="26dp"
            android:layout_marginRight="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"/>
       
        <LinearLayout
            android:layout_below="@id/text_num"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/text_cishu"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="500H币/次"
                android:layout_height="match_parent" />
            
            <Button
                android:textColor="#fff"
                android:background="@drawable/meijiao"
                android:text="立即咨询"
                android:id="@+id/but_zixun"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            
        </LinearLayout>
       

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="18dp"
            android:id="@+id/recyc_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

        <ImageView
            android:id="@+id/image_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="13dp"
            android:src="@mipmap/common_information_next_n"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/image_left"
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:src="@mipmap/common_list_previous_n"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>




</LinearLayout>
