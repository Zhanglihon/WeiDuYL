<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/we"
        android:orientation="vertical"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="6dp">
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/li_image"
        android:background="@drawable/aaw"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="116dp"
        android:layout_marginBottom="10dp"
        android:layout_height="140dp" />
    <TextView
        android:id="@+id/li_text1"
        android:text="123"
        android:layout_toRightOf="@id/li_image"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/li_text2"
        android:text="123"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/li_text1"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/li_textw"
        android:layout_below="@id/li_text1"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:layout_toRightOf="@id/li_image"
        android:layout_marginLeft="20dp"
        android:text="问诊时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/li_time"
        android:layout_toRightOf="@id/li_textw"
        android:layout_below="@id/li_text2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/chakan"
        android:text="查看问诊记录"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_below="@id/li_time"
        android:layout_toRightOf="@id/li_image"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/aaw1"
        android:textColor="#ffff"
        android:layout_width="84dp"
        android:layout_height="34dp" />
    <TextView
        android:id="@+id/pingjia"
        android:text="去评价"
        android:textSize="12sp"
        android:layout_below="@id/li_time"
        android:layout_toRightOf="@+id/chakan"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="32dp"
        android:gravity="center"
        android:background="@drawable/aaw1"
        android:textColor="#ffff"
        android:layout_width="58dp"
        android:layout_height="34dp" />
</RelativeLayout>
</LinearLayout>