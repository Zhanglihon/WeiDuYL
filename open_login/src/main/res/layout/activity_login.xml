<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="67dp"
            android:layout_height="64dp"
            android:layout_marginTop="46dp"
            android:background="@mipmap/login1"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="218dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:alpha="0.4"
                android:background="@drawable/login_shape">

            </LinearLayout>
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="218dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:alpha="0.6"
            android:background="@drawable/login_shape">

        </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="218dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/login_shape"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/login_icon_mail_n" />

                    <EditText
                        android:id="@+id/login_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="34dp"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:hint="请输入邮箱"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/login_email"
                        android:background="#ABB6BD" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="44dp"
                        android:background="@mipmap/login_icon_lock_n" />

                    <EditText
                        android:id="@+id/login_pwd"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/login_radiobutton_eyes"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/login_pwd"
                        android:layout_marginLeft="190dp"
                        android:background="@drawable/check_select"
                        android:button="@null" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/login_pwd"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:background="#ABB6BD" />

                    <Button
                        android:id="@+id/login_dl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/login_circle_shape"
                        android:text="登录"
                        android:textColor="#fff" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/login_forgetpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:text="忘记密码"/>
            <TextView
                android:id="@+id/login_ljzc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无账号？立即注册"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:layout_marginRight="60dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="45dp"
                android:background="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="240dp"
                android:text="其它登录方式" />
            <View
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_marginTop="250dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/login_wxdl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_wx"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>