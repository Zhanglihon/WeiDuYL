<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WdscActivity"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/wdsc_image_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/common_icon_back_black_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="0dp"
            android:text="我的收藏" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/qqqqqqqq"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/aaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/shouchneg_radio_group"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:textColor="@android:color/holo_blue_bright"
                android:text="健康咨询"
                android:button="@null"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/btnn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@android:color/holo_blue_bright"
                android:gravity="center_horizontal"
                android:text="健康视频"
                android:button="@null"
                android:layout_weight="1"
                android:id="@+id/btnn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:textColor="@android:color/holo_blue_bright"
                android:gravity="center_horizontal"
                android:text="病友圈"
                android:button="@null"
                android:layout_weight="1"
                android:id="@+id/btnn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/qqqqqqqq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/shouchuang_frament"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"></FrameLayout>
    </RelativeLayout>

</LinearLayout>