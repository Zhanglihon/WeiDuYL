<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_haid_f4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="32dp"
                    android:src="@mipmap/historical_inquiry" />


                <ImageView
                    android:id="@+id/image_ling"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/common_nav_message_black_n" />

                <TextView
                    android:id="@+id/text_k"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_below="@id/image_haid_f4"
                    android:layout_marginTop="20dp"
                    android:background="#F2F2F2" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="*"
                    android:textColor="#3087ea"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/text_title_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:hint="请输入标题 (最多20个字)"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/text_title_f"
                    android:layout_marginTop="10dp"
                    android:background="#F2F2F2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="*"
                    android:textColor="#3087ea"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/text_keshi_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:hint="请选择就诊科室"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_keshi_xia"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/text_keshi_f"
                    android:layout_marginTop="10dp"
                    android:background="#F2F2F2" />

                <ImageView
                    android:id="@+id/image_ks"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/circle_icon_drop_down_n" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/text_hong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="*"
                    android:textColor="#f00"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/text_bingzheng_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:hint="请选择主要病症"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_bingzheng_xia"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/text_bingzheng_f"
                    android:layout_marginTop="10dp"
                    android:background="#F2F2F2" />

                <ImageView
                    android:id="@+id/image_bz"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/circle_icon_drop_down_n" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#3087ea"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/text_xiangqing_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:hint="请输入病症详情"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_kl"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/text_xiangqing_f"
                    android:layout_marginTop="200dp"
                    android:background="#F2F2F2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/text_kl"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:text="不超过300字"
                    android:textColor="#3087ea" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:text="请输入最近一段治疗经历"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yuanjiaobaise"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/text_yyname_f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:hint="请输入医院名称"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/text_yyname_f"
                        android:layout_marginTop="10dp"
                        android:background="#F2F2F2" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/text_kaishitime_f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:background="@null"
                        android:hint="请选择开始时间"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/text_kaishitime_f"
                        android:layout_marginTop="10dp"
                        android:background="#F2F2F2" />

                    <ImageView
                        android:id="@+id/image_kstime"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/circle_icon_drop_down_n" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/text_endtime_f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:background="@null"
                        android:hint="请选择结束时间"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/text_endtime_f"
                        android:layout_marginTop="10dp"
                        android:background="#F2F2F2" />

                    <ImageView
                        android:id="@+id/image_endtime"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/circle_icon_drop_down_n" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/text_zhiliaogc_f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:background="@null"
                        android:hint="请输入治疗过程"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/text_zhiliaogc_f"
                        android:layout_marginTop="80dp"
                        android:background="#F2F2F2" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="#f2f2f2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="最多可添加6张图片；长按图片排序"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/fa_RecyclerViewdddd"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="#f2f2f2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="提升悬赏金额"
                    android:textSize="12sp" />

                <com.suke.widget.SwitchButton
                    android:id="@+id/switchbutton"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.8"
                    android:layout_marginRight="20dp"
                    app:sb_checked="true"
                    app:sb_checked_color="#3087ea"
                    app:sb_show_indicator="false" />

            </RelativeLayout>

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/text_kkk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="提升额度可获得更多的关注，得到更多的建议"
                android:textSize="10sp" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:id="@+id/relayout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <TextView
                    android:background="@drawable/yuanjiaobaise_1"
                    android:gravity="center"
                    android:id="@+id/text_10"
                    android:layout_width="104dp"
                    android:layout_height="52dp"

                    android:text="10H币" />

                <TextView
                    android:background="@drawable/yuanjiaobaise_1"
                    android:layout_alignBottom="@id/text_10"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/text_10"
                    android:id="@+id/text_20"
                    android:layout_width="104dp"
                    android:layout_height="52dp"
                    android:text="20H币" />

                <TextView
                    android:background="@drawable/yuanjiaobaise_1"
                    android:layout_alignBottom="@id/text_10"
                    android:gravity="center"
                    android:layout_toRightOf="@id/text_20"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/text_30"
                    android:layout_width="104dp"
                    android:layout_height="52dp"

                    android:text="30H币" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:background="@drawable/yuanjiaobaise_1"
                    android:gravity="center"
                    android:layout_below="@id/text_10"
                    android:id="@+id/text_zidingyi"
                    android:layout_width="104dp"
                    android:layout_height="52dp"

                    android:text="自定义" />

                <TextView

                    android:layout_alignBottom="@id/text_zidingyi"
                    android:layout_toRightOf="@id/text_zidingyi"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/text_yue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="当前H币余额 300.不足？去" />
                <TextView
                    android:id="@+id/text_chongzhi"
                    android:layout_alignBottom="@id/text_yue"
                    android:layout_toRightOf="@id/text_yue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3087ea"
                    android:text="充值" />

            </RelativeLayout>


            <Button
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                android:textColor="#fff"
                android:background="@drawable/yuanjiao"
                android:text="发表"
                android:layout_marginTop="20dp"
                android:layout_below="@id/text_zidingyi"
                android:layout_width="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_height="40dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
