<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <LinearLayout
        android:visibility="visible"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/image_view_tou"/>

    <RelativeLayout
        android:background="@drawable/baisekuang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:textSize="14sp" />

        <ImageView
            android:src="@mipmap/common_icon_inquiry_n"
            android:id="@+id/image_yi"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp" />

        <TextView
            android:layout_marginRight="12dp"
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_count"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="11dp"
            android:textSize="10sp" />


        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_alignBottom="@id/text_time"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_zan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/dianzai_n" />
            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_zan"/>

            <ImageView
                android:src="@mipmap/diancai_n"
                android:layout_marginLeft="20dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/image_cai"/>

            <TextView
                android:textSize="12sp"
                android:id="@+id/text_cai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"

                />
        </LinearLayout>
    </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
