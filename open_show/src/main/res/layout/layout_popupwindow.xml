<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/recyc_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="20dp"></com.jcodecraeer.xrecyclerview.XRecyclerView>




    <ImageView
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/common_button_close_n"
        android:id="@+id/image_viewx"
        android:layout_alignParentBottom="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <EditText
        android:id="@+id/edit_shuru"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:hint="在此留下高见吧！！"
        android:background="@drawable/shurukuangheise"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@id/image_viewx"
        android:layout_toRightOf="@id/image_viewx"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <ImageView
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/none_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view_meiyou"/>

</RelativeLayout>
