<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_fan"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/wallet_left" />


    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="消息"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/text_k"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/image_fan"
        android:layout_marginTop="40dp"
        android:background="#F2F2F2" >

        
        <RelativeLayout
            android:background="@drawable/baise"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/image_cuo"
                android:src="@mipmap/message_icon_close_n"
                android:layout_marginLeft="10dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/text_kkk"
                android:layout_toRightOf="@id/image_cuo"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开系统通知，H币入账消息不错过"
                android:textSize="12sp"/>
            
            
            <RadioButton
                android:gravity="center"
                android:textColor="#fff"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="58dp"
                android:layout_height="30dp"
                android:button="@null"
                android:background="@drawable/yuanjiao"
                android:text="开启"/>

        </RelativeLayout>

    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative_k"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/text_k"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/image_xt"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/system_information"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/image_xt"
                android:textColor="#b8ead8"
                android:text="系统消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="12sp"
                android:gravity="center"
                android:text="0"
                android:textColor="#fff"
                android:background="@drawable/yuanfeng"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_numxt"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/text_k1"
            android:layout_marginTop="30dp"
            android:layout_below="@id/relative_k"
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <RelativeLayout
            android:id="@+id/relative_kk"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/text_k1"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/image_wz"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/interview_news"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/image_wz"
                android:textColor="#f984a2"
                android:text="问诊消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="12sp"
                android:gravity="center"
                android:text="0"
                android:textColor="#fff"
                android:background="@drawable/yuanfeng"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_numwz"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/text_k2"
            android:layout_marginTop="30dp"
            android:layout_below="@id/relative_kk"
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="1dp" />



        <RelativeLayout
            android:id="@+id/relative_kkk"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/text_k2"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/image_hb"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/recorded_message"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/image_hb"
                android:textColor="#ffbf58"
                android:text="H币入账消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="12sp"
                android:gravity="center"
                android:text="0"
                android:textColor="#fff"
                android:background="@drawable/yuanfeng"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_numhb"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/text_k5"
            android:layout_marginTop="30dp"
            android:layout_below="@id/relative_kkk"
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </RelativeLayout>

</LinearLayout>
